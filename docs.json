{
    "opts": {
        "encoding": "utf8",
        "destination": "./docs/"
    },
    "plugins": [
        "node_modules/better-docs/typescript"
    ],
    "source": {
        "include": [
            "src/configs/index.ts",
            "src/configs/zConfigDB.ts",
            "src/configs/zConfigModule.ts",

            "src/controllers/index.ts",

            "src/enums/index.ts",
            "src/enums/zEDatabase.ts",

            "src/interfaces/index.ts",
            "src/interfaces/zIConfigs.ts",
            "src/interfaces/zIDatabase.ts",
            "src/interfaces/zITranslate.ts",

            "src/locale/index.ts",
            "src/locale/zLgnGeneric.ts",
            "src/locale/zLgnDatabase.ts",

            "src/services/index.ts",
            "src/services/zDatabaseService.ts",
            "src/services/zTranslateService.ts",
            "src/services/zCrudService.ts"
        ],
        "includePattern": "\\.(jsx|js|ts|tsx)$"
    }
} 