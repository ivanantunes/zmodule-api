{
  "name": "zmodule-api",
  "version": "1.0.1",
  "description": "A library created with the concept of facilitating the creation of api.",
  "bin": "lib/index.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "postversion": "git push && git push --tags",
    "dist:patch": "npm version patch && npm run build && npm publish",
    "dist:minor": "npm version minor && npm run build && npm publish",
    "dist:major": "npm version major && npm run build && npm publish",
    "start": "ts-node src/test/index.ts",
    "watch": "nodemon -e ts -w ./src -x npm run watch:serve",
    "watch:serve": "ts-node src/test/index.ts",
    "build": "rm -rf lib/ && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivanantunes/zmodule-api.git"
  },
  "keywords": [
    "api",
    "module",
    "node",
    "js",
    "javascript",
    "rest",
    "typescript"
  ],
  "author": "Ivan Antunes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivanantunes/zmodule-api/issues"
  },
  "homepage": "https://github.com/ivanantunes/zmodule-api#readme",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^6.2.0",
    "i18next": "^19.9.2",
    "mariadb": "^3.2.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.9.6",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.3",
    "rxjs": "^7.8.1",
    "sequelize": "^6.33.0",
    "socket.io": "^4.7.2",
    "superagent": "^8.1.2",
    "tedious": "^15.1.3",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.1.0",
    "@types/cors": "^2.8.14",
    "@types/crypto-js": "^4.1.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.19",
    "@types/faker": "^6.6.9",
    "@types/helmet": "^4.0.0",
    "@types/node": "^18.18.4",
    "@types/nodemailer": "^6.4.11",
    "@types/nodemailer-direct-transport": "^1.0.33",
    "@types/nodemailer-smtp-transport": "^2.7.6",
    "@types/sequelize": "^4.28.16",
    "@types/superagent": "^4.1.19",
    "faker": "^6.6.6",
    "jsdoc": "^3.6.11",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.9.5"
  }
}
